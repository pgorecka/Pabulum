<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/recipesFragment">

    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.example.pabulum.ui.fragments.vault.RecipesVaultFragment"
        android:label="Recipes Vault"
        tools:layout="@layout/fragment_recipes" >
        <action
            android:id="@+id/action_recipesFragment_to_vaultBottomSheet"
            app:destination="@id/vaultBottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/favoriteRecipesFragment"
        android:name="com.example.pabulum.ui.fragments.favorites.FavoriteRecipesFragment"
        android:label="Favorite Recipes"
        tools:layout="@layout/fragment_recipes_vault" />
    <fragment
        android:id="@+id/cookingTipsFragment"
        android:name="com.example.pabulum.ui.fragments.tips.CookingTipsFragment"
        android:label="Cooking Tips"
        tools:layout="@layout/fragment_cooking_tips" />
    <dialog
        android:id="@+id/vaultBottomSheet"
        android:name="com.example.pabulum.ui.fragments.vault.bottomSheet.VaultBottomSheet"
        android:label="vault_bottom_sheet"
        tools:layout="@layout/vault_bottom_sheet" >
        <action
            android:id="@+id/action_vaultBottomSheet_to_recipesFragment"
            app:destination="@id/recipesFragment" />
    </dialog>
</navigation>